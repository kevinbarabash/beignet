{
  "name": "crochet-language-support",
  "displayName": "crochet-language-support",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:crochet"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "crochet",
        "aliases": [
          "Crochet",
          "crochet"
        ],
        "extensions": [
          ".crochet"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/scarf.png",
          "dark": "./icons/scarf.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "crochet",
        "scopeName": "source.crochet",
        "path": "./syntaxes/crochet.tmLanguage.json"
      }
    ]
  },
  "configurationDefaults": {
    "crochet": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "tree-sitter": "^0.20.1",
    "tree-sitter-crochet": "file:../../crates/tree_sitter_crochet",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "web-tree-sitter": "^0.20.7"
  }
}
