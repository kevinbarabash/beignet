{
  "name": "@crochet-lang/crochet",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build-wasm": "cd crates/crochet && cargo build --target wasm32-wasi --release",
    "watch-wasm": "cargo watch -- cargo build --target wasm32-wasi --release",
    "build": "webpack && cp scarf.png build && cp index.css build",
    "serve": "webpack serve",
    "coverage:test": "CARGO_INCREMENTAL=0 RUSTFLAGS='-Cinstrument-coverage' LLVM_PROFILE_FILE='profiles/cargo-test-%p-%m.profraw' cargo test",
    "coverage:html": "mkdir -p target/coverage && grcov . --binary-path ./target/debug/deps/ -s . -t html --branch --ignore-not-existing --ignore '../*' --ignore '/*' -o target/coverage/html",
    "coverage:lcov": "mkdir -p target/coverage && grcov . --binary-path ./target/debug/deps/ -s . -t lcov --branch --ignore-not-existing --ignore '../*' --ignore '/*' -o target/coverage/tests.lcov"
  },
  "devDependencies": {
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "html-webpack-plugin": "^5.3.2",
    "sloc": "^0.2.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.7.3",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@wasmer/wasi": "1.1.1",
    "buffer": "^6.0.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
